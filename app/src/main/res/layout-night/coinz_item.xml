<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/black"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_num_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/font_date"
            android:text="@string/tv_num_item"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_num_item"
            app:layout_constraintStart_toEndOf="@+id/tv_num_item"
            app:layout_constraintTop_toTopOf="@+id/tv_num_item"
            app:srcCompat="@drawable/btcc" />

        <TextView
            android:id="@+id/tv_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/swissra_bold"
            android:text="@string/tv_name_item"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item"
            app:layout_constraintStart_toEndOf="@+id/iv_item"
            app:layout_constraintTop_toTopOf="@+id/iv_item" />

        <TextView
            android:id="@+id/tv_prices_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/semibold"
            android:text="@string/tv_prices_item"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_item"
            app:layout_constraintStart_toEndOf="@+id/tv_name_item"
            app:layout_constraintTop_toTopOf="@+id/tv_name_item" />

        <TextView
            android:id="@+id/tv_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/semibold"
            android:text="$"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_prices_item"
            app:layout_constraintStart_toEndOf="@+id/tv_prices_item"
            app:layout_constraintTop_toTopOf="@+id/tv_prices_item" />

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:fontFamily="@font/semibold"
            android:text="@string/tv_percent"
            android:textColor="@color/color_num_coin"
            app:layout_constraintBottom_toBottomOf="@+id/tv_prices_item"
            app:layout_constraintStart_toEndOf="@+id/tv_d"
            app:layout_constraintTop_toTopOf="@+id/tv_prices_item" />
        <TextView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="â†‘"
            android:textColor="@color/color_num_coin"
            app:layout_constraintBottom_toBottomOf="@+id/tv_percent"
            app:layout_constraintEnd_toStartOf="@+id/tv_percent"
            app:layout_constraintTop_toTopOf="@+id/tv_percent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>